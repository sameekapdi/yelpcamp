<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
        <h1>Welcome to YelpCamp!</h1>
        <p>view our hand-picked campgrounds from around the world!</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
        </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12" style="display:block;">
            <h3>Our most popular campgrounds</h3>
        </div>
     
        <div class="row" style="flex-wrap: wrap; text-align:center;">
             <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src=" <%= campground.image %>" width="100%">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</div>

<% include ../partials/footer %>
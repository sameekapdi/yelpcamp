<% include partials/header %>

<div class="container">
    <div class="row"> 
        <h1 style="text-align: center;">Reset Password</h1>
        <div style="width: 33.3%; margin: 25px auto;">
            <form action="/reset/<%= token %>" method="POST">
                <div class="form-group">
                    <label for="email">New Password</label>
                    <input class="form-control" type="password" name="password" value="" autofocus="autofocus" placeholder="New Password">
                </div>
                <div class="form-group">
                    <label for="email">Confirm Password</label>
                    <input class="form-control" type="password" name="confirm" value="" placeholder="Confirm Password">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-lg btn-default btn-block" value="Update Password">
                </div>
            </form>
        <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<% include partials/footer %>